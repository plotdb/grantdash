//- view
extends /base.pug
block head
  style(type="text/css"): :stylus
    .blform
      border-left:.25em solid #eee
      padding:0 0 0 1em
      margin-bottom: 2em
    .typeset.heading-contrast
      .table-tiny
        td
          padding: .75em 2px
          font-size: .9em
          input, .form-control
            font-size: .8em
          input.is-valid
            background-image: none

      .form-group { margin-bottom: 1.5rem }
      .form-control._preview
        border-radius: 0
        border: 0
        border-bottom: 1px solid #ccc
        background: #f2f3f4
        display: none
      select, textarea, input
        &.form-control.is-valid
          border-color: #ccc
          background-image: none
    .form-check-input.is-valid ~ .form-check-label
      color: inherit
    .page
      page-break-after: always
      marin: 2em 2em
    .page.page-cover
      margin: 0
      height: 29.7cm
    .form-inner-box
      padding: 1.5em
      border-radius: .5em
      border: 1px solid #ddd
      box-shadow: 0 2px 4px rgba(0,0,0,.1)

    .no-break
      page-break-inside: avoid
    @page
      margin: 20mm 10mm
    @media print 
      body
        margin: 0
      .page
        margin: 0
      .no-print, .grecaptcha-badge
        display: none
      .form-inner-box
        border: 0
        box-shadow: none
      .typeset.heading-contrast
        input,textarea,select
          &.form-control
            display: none
        .form-control._preview
          display: block


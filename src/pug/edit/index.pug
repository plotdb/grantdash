extends /base.pug
block vars
  - ctrl.navtop.placeholder = false
  - ctrl.navtop.shown = true
block head
  +css("/assets/lib/ldui/ext/folder.min.css")
  style(type="text/css"): :stylus
    html,body { width: 100%; height: 100% }
    .folder-item, .folder
      color: #fff
    .folder-menu > .folder-item { padding-left: .75em }
    .folder-menu
      height: 0
      overflow: hidden
block body
  include /modules/mixins/index.pug
  .d-flex.h-100(style="padding-top:55px;overflow:hidden")
    .bg-secondary.h-100.d-flex.flex-column(style="width:200px")
      .p-2.border-bottom.border-dark
        a.btn.btn-sm.btn-text.text-light(href="/admin/") #[i.i-dart-left] 主控台

      .flex-grow-1
        +scope("editor-menu-sample").d-none
          div(ld="item"): .folder-item #[i.i-doc(ld="icon")] #[span(ld="name")]
          div(ld="folder"): .folder.show(draggable="true")
            .folder-item.folder-toggle.d-flex.align-items-center
              .flex-grow-1(ld="name")
              i.i-plus
            .folder-menu
              div(ld-each="list")
        +scope("editor-menu"): div(ld-each="list")

      //-.flex-grow-1

        .folder.show
          .folder-item.folder-toggle.d-flex.align-items-center
            .flex-grow-1 pages
            i.i-plus
          .folder-menu
            each i in ["index.html", "brief.html", "faq.html", "report.html", "header.html"]
              .folder-item #[i.i-doc] #{i}

        .folder.show

          .folder-item.folder-toggle.d-flex.align-items-center
            .flex-grow-1 styles
            i.i-plus
          .folder-menu
            each i in ["index.css"]
              .folder-item #[i.i-doc] #{i}

        .folder.show

          .folder-item.folder-toggle.d-flex.align-items-center
            .flex-grow-1 widgets
            i.i-plus
          .folder-menu
            each i in ["project-list-header"]
              .folder-item #[i.i-doc] #{i}

        .folder.show

          .folder-item.folder-toggle.d-flex.align-items-center
            .flex-grow-1 assets
            i.i-plus
          .folder-menu
            each i in ["background.jpg"]
              .folder-item #[i.i-doc] #{i}

    //-.bg-dark.h-100.flex-grow-1.d-flex.flex-column(style="box-shadow:-2px 0 10px rgba(0,0,0,.3);width:500px")
      //-.p-2.text-right
        .btn.btn-sm.btn-outline-light use sample ..
      .flex-grow-1
        .h-100.p-3.code-block.text-left.text-white.text-lg.
          .d-flex.h-100(style="padding-top:55px;overflow:hidden")
            .bg-secondary.h-100.d.flex.flex-column(style="width:200px")
              .p-2
                .btn.btn-sm.btn-text.text-light [i.i-dart-left] dashboard
              .flex-grow-1
                .item.d-flex.align-items-center
                  .flex-grow-1 [i.i-dart-down] pages
                  i.i-plus
                .dir
                  each i in ["index.html", "brief.html", "faq.html", "report.html", "header.html"]
                    .item [i.i-doc] {i}
                .item.d-flex.align-items-center
                  .flex-grow-1 [i.i-dart-down] styles
                  i.i-plus
    //-.bg-light.h-100.flex-grow-1(style="box-shadow:-2px 0 10px rgba(0,0,0,.3);width:500px")
      //-.p-2.text-right
        .btn.btn-sm.btn-outline-dark.mr-2 window
        .btn.btn-sm.btn-outline-dark reload

    .bg-light.h-100.flex-grow-1(style="box-shadow:-2px 0 10px rgba(0,0,0,.3);width:500px")
      .flex-grow-1.d-flex.flex-column.h-100
        #toolbar.bg-white.shadow: include toolbar.pug
        #editor.flex-grow-1
          include sample.pug



block script

  // Main Quill library
  script(src='//cdn.quilljs.com/1.0.0/quill.js')
  script(src='//cdn.quilljs.com/1.0.0/quill.min.js')
  // Theme included stylesheets
  link(href='//cdn.quilljs.com/1.0.0/quill.snow.css' rel='stylesheet')
  link(href='//cdn.quilljs.com/1.0.0/quill.bubble.css' rel='stylesheet')
  // Core build with no theme, formatting, non-essential modules
  //-
    link(href='//cdn.quilljs.com/1.0.0/quill.core.css' rel='stylesheet')
    script(src='//cdn.quilljs.com/1.0.0/quill.core.js')

  +script("/assets/lib/ldui/ext/folder.min.js")
  +script("/js/edit/index.js")

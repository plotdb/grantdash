extends /base.pug
block vars
  - ctrl.foot.edgeMask = false;
  - ctrl.navtop.className = "navbar-light"
  - ctrl.navtop.placeholder = false;
  block vars
block body
  .w-100.h-100.text-center.vertical-center(
  style="background:center center;background-size:cover")

extends /base.pug
block body
  include /ui/data/sample.pug
  include /modules/mixins/index.pug
  +css("/assets/lib/handsontable/handsontable.min.css")
  +script("/assets/lib/handsontable/handsontable.min.js")
  +script("/assets/lib/ldui/ldui.min.js")
  +script("/js/admin/reblock.js")
  style(type="text/css"): :stylus
    .card { margin-bottom: 3em }
    .timeline-list
      .item
        border-left: 1px solid #ccc
        //- prevent margin collapsing
        border-top: 1px solid transparent
        padding: 0 0 30px 20px
        position: relative
        .title
          font-size: 1.2em
          font-weight: 600
          margin: -10px 0 5px 0
        &:after
          content: " "
          display: block
          position: absolute
          top: 0
          left: -5px
          border-radius: 50%
          width: 10px
          height: 10px
          background: #ccc
      .item:last-child
        border-left: 0px solid transparent

  .w-768.mx-auto.rwd.typeset.heading-contrast

    h4 提案表
    p.text-sm.text-muted 您可以在這裡設定提案 / 報名時，提案人所需要提交的表格。
    hr.my-4
    #root.form-root
      div(repeat-item="blocks")
      .d-none: include subblock.pug
    div(hostable)
    div(repeatable)
    div(editable)

  +script("/js/form/work.js")

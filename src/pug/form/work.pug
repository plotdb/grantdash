extends /base.pug
block body
  include /ui/data/sample.pug
  include /modules/mixins/index.pug
  include timeline.pug
  +css("/assets/lib/handsontable/handsontable.min.css")
  +script("/assets/lib/handsontable/handsontable.min.js")
  +script("/assets/lib/ldui/ldui.min.js")
  +script("/js/reblock/form-reblock.js")
  +script("/assets/lib/ctrlz/ot-json0.js")

  .w-768.mx-auto.rwd.typeset.heading-contrast

    h4 提案表
    p.text-sm.text-muted 您可以在這裡設定提案 / 報名時，提案人所需要提交的表格。
    hr.my-4
    .d-flex
      #root.flex-grow-1
        .inner.border.shadow-sm.p-2(hostable,style="min-height:100vh")
        .d-none.sample: include subblock.pug
      #menu.ml-4
        .sticky(style="top:150px")
          .list-group.shadow-sm.mb-4
            .list-group-item.clickable.text-nowrap(
            ld="blocksrc",draggable="true",data-name="short-answer") #[i.i-doc] 短答
            .list-group-item.clickable(ld="blocksrc",draggable="true",data-name="long-answer") #[i.i-doc] 申論
            .list-group-item.clickable(ld="blocksrc",draggable="true",data-name="checkbox") #[i.i-doc] 單選
            .list-group-item.clickable(ld="blocksrc",draggable="true",data-name="radio") #[i.i-doc] 多選
            .list-group-item.clickable(ld="blocksrc",draggable="true",data-name="file") #[i.i-doc] 傳檔
            .list-group-item.clickable(ld="blocksrc",draggable="true",data-name="budget") #[i.i-doc] 預算
            .list-group-item.clickable(ld="blocksrc",draggable="true",data-name="checkpoint") #[i.i-doc] 查核
          .btn.btn-primary.btn-block 更新資料
          .btn.btn-outline-secondary.btn-block 捨棄變更


  +script("/js/form/work.js")


extends /base.pug
block vars
  - ctrl.navtop.placeholder = false;
  - ctrl.navtop.shown = false;
block head
  style(type="text/css"): :stylus
    #editor { font-size: 1em }
    html,body { margin: 0}
block body
  .ldcv.scroll(ld="preview-ldcv"): .base.w-768.rwd.h-75: .inner.card
    .closebtn.lg(data-ldcv-set="")
    .card-body(style="overflow-y:scroll",ld="preview-panel")
  .mx-auto.typeset.heading-contrast
    .d-flex.flex-column.w-100.h-100.border.rounded.shadow-sm.p-4
      .form-group
        label 標題
        input.form-control.border.rounded(ld="title")
      .form-group
        .d-flex.align-items-center
          label.mr-2.mb-0 網址
          a.flex-grow-1(ld="url",target="_blank",rel="noopener noreferrer")
          .btn.btn-sm.btn-primary(ld="preview") 預覽
          .btn.btn-sm.btn-primary.ml-2(ld="publish") 發布
      .flex-grow-1.d-flex.flex-column: #editor

block script
  // Main Quill library
  script(src='//cdn.quilljs.com/1.3.7/quill.js')
  script(src='//cdn.quilljs.com/1.3.7/quill.min.js')
  // Theme included stylesheets
  link(href='//cdn.quilljs.com/1.3.7/quill.snow.css' rel='stylesheet')
  link(href='//cdn.quilljs.com/1.3.7/quill.bubble.css' rel='stylesheet')
  // Core build with no theme, formatting, non-essential modules
  //-
    link(href='//cdn.quilljs.com/1.0.0/quill.core.css' rel='stylesheet')
    script(src='//cdn.quilljs.com/1.0.0/quill.core.js')

  +script("/js/admin/post-edit.js")
  +script("/dash/assets/lib/sharedb-wrapper/client.bundle.min.js")
  +script("/assets/lib/suuid/suuid.bundle.min.js")
  +script("/dash/js/util/sdb-adapter.js")
  +script("/dash/js/util/hub.js")

body
  background-size: cover

#nav-top nav.navbar
  width: 1024px
  margin: auto
  a.nav-link, a.navbar-brand
    color: #222

.gd-prj-list-banner
  box-shadow: 0 10px 20px rgba(0,0,0,.2)
  color: #eee
  background-color: #343a40
  margin-bottom: 1.5em
  border-radius: .5em
  text-shadow: 0 .125em .25em rgba(0,0,0,.1)
  width: 100%
  height: 300px
  background-position: center center
  background-repeat: no-repeat
  background-size: cover
  & > div
    border-radius: .5em
    background: linear-gradient(90deg,rgba(0,0,0,.7),rgba(0,0,0,.4),rgba(0,0,0,.1))
  .btn
    border: 1px solid #fff
    color: #fff
  .btn:hover
    background: #fff
    color: #222

.gd-prj-list-info
  width: 50%
  text-align: left
  margin-left: 1.5em
  padding: 1.5em
  h3
    font-weight: 300
  p.desc
    font-size: .8em
    margin-bottom: 1.5em
    max-width: 400px
    opacity: .65

.gd-prj-list-ctrl
  display: flex
  width: 100%
  justify-content: space-between
  padding: .5em 0
  .btn
    border: 1px solid #fff
    color: #fff
  .btn:hover
    background: #fff
    color: #000
  .btn.active
    background: #007bff
    border: 1px solid #007bff
    color: #fff

.gd-prj-card
  display: block
  margin: 1.5em 0
  padding: 1.5em 0
  display: flex
  flex-direction: column
  width: 19em
  overflow: hidden
  color: #444

.gd-prj-card > a
  text-decoration: none
  color: #444

.gd-prj-card-thumb
  display: block
  background: #dedfe0
  background-size: cover
  background-position: center center
  border-radius: .2em
  margin-bottom: 1em

.gd-prj-card-name
  display: block
  font-weight: 500
  font-size: 1.25em

.gd-prj-card-owner
  display: block
  margin: 0 0 .5em .1em
  font-size: .8em
  a
    color: #222
    text-decoration: underline

.gd-prj-card-description
  display: block

.gd-prj-list-search-box
  .btn
    border: 1px solid #222
    color: #222
  .btn:hover
    background: #222
    color: #fff
  input
    border: 1px solid #222

.gd-prj-list-pagination
  .btn
    border: 1px solid #222
    color: #222
  .btn:hover
    background: #222
    color: #fff
  .btn.active
    background: #222
    border: 1px solid #222
    color: #fff

.gd-prj-view
  width: 100%
  position: relative
  margin: 0
  padding: 6em 0 1.5em
  .inner
    width: 1024px
    height: 100%
    margin: auto
    padding-top: 1.5em
    margin-top: 1em

@media(max-width: 1024px)
  .gd-prj-view .inner
    width: 95%

.gd-prj-view-header.simple
  display: flex
  margin-bottom: 2.5em

  .thumb
    border-radius: .25em
    background-color: #222
    background-size: cover
    background-position: center center
    background-repeat: no-repeat
    margin: 1.5em 3em 0 0
    width: 9.25em
    height: 9.25em
    flex: 0 0 auto

  .info
    flex: 1 0 0
    padding-right: .5em

  .brd
    font-size: .85em
    color: #777

  .title
    display: flex
    align-items: flex-end
    margin-top: .25em
    h2
      margin: .25em 0 0
      line-height: 1em
  .tags
    line-height: 1em
    margin-left: 1em
    flex: 1 0 auto
  .tags a
    color: #444
    margin-right: .5em
    background: #e0e1e2
    padding: .1em .4em
    animation: ld-float-rtl-in 1s linear
    animation-fill-mode: forwards
    opacity: .05
    transform: matrix(1,0,0,1,14.925,0)
    font-size: .8em
    border-radius: .25em

  .btn
    border: 1px solid #222
    color: #222
  .btn:hover
    border: 1px solid #222
    background: #222
    color: #fff
  .user
    display: flex
    margin: 1.5em 0
    flex: 1 0 auto
    .item
      margin-right: 1.5em
      flex: 1 0 auto
      display: flex
      align-items: center
      .label
        opacity: .8
        margin-right: 1em
      .name
        font-size: 1em
      .avatar
        width: 1.25em
        height: 1.25em
        border-radius: 50%
        margin-right: .5em
        display: inline-block
        background-color: #444

  .hr
    width: 100%
    margin: 1.5em 0
    height: 2px
    background linear-gradient(90deg,#aaebcc,#ddfeef)

.gd-prj-view-body.simple
  width: 100%
  background: #eeeff0
  padding-top: 1.5em
  border-top: 1px solid #ccc
  margin: 0
  padding: 2em 0 4em
  .inner
    width: 1024px
    height: 100%
    margin: auto
  .block
    padding: 1.5em
    border: 1px solid #ccc
    box-shadow: 0 4px 8px rgba(0,0,0,.3)
    background: #fff
    border-radius: .25em
    margin-bottom: 1.5em
  .caption
    padding: 1.5em 0
    h3
      margin-top: 1.5em
    p
      opacity: .9

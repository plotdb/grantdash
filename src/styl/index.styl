@import url('https://fonts.googleapis.com/css?family=Noto+Sans+TC:300,500,700|Roboto:300,500,700&display=swap');

@font-face
  font-family: 'ldi'
  font-weight: normal
  font-style: normal
  src:
    url('/assets/lib/ldui/fonts/ldi.ttf?x74ll4') format('truetype'),
    url('/assets/lib/ldui/fonts/ldi.woff?x74ll4') format('woff'),
    url('/assets/lib/ldui/fonts/ldi.svg?x74ll4#ldi') format('svg')

html, body
  width: 100%
  height: 100%

h1,h2,h3
  font-family: 'Noto Sans TC', serif!important

.typeset, body
  h4,h5,h6
    font-family: Roboto, 'Noto Sans TC', sans-serif!important;font-weight:500

body .typeset, body, p 
  font-family: Roboto, 'Noto Sans TC', sans-serif!important

::placeholder
  color: rgba(0,0,0,.4)!important
  font-weight: 200



[ld-scope=prj-form]
  [ld=title], [ld=desc]
    word-break: break-word
[ld=form-list]:empty
  position: relative
  background: #eee
  &:before
    content: "將右方項目拖放到這裡 ..."
    display: block
    border-radius: .5em
    padding: .5em
    color: #999
    text-align: center
    margin: auto
    height: 3em
    top: 0
    left: 0
    bottom: 0
    right: 0
    position: absolute

.form-block i.i-radio[ld=state]:before
   content: "\f00e"
.form-block i.i-radio.active[ld=state]:before
   content: "\f00f"

.form-block i[type=radio][ld=state]:before
  content: "\f00e"
.form-block i.active[type=radio][ld=state]:before
  content: "\f00f"

.form-block i[type=checkbox][ld=state]:before
  content: "\f033"
.form-block i.active[type=checkbox][ld=state]:before
  content: "\f034"

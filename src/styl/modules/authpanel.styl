//- module
.authpanel, .ldcv > .base > .inner.authpanel
  background: none
  margin: 0 auto
  width: 700px
  height: 510px
  max-width: 100%
  border-radius: 10px
  overflow: hidden
  box-shadow: 0 20px 40px rgba(0,0,0,.6)
  background-color: #234
  background-image: unquote('url(data:image/svg+xml;base64,)')
  background-size: 50%
  background-position: left center
  background-repeat: no-repeat
.authpanel .card-body
  background: center center no-repeat
  background-size: cover

.authpanel .info
  width: 381px
  display: inline-block
  background-color: #455667
  background-position: center center
  background-repeat: no-repeat
  background-size: cover
  float: left
  height: 513px
  position: relative
  color: #fff
  left: 0

.authpanel .form
  width: 50%
  height: 100%
  font-size: 16px
  position: absolute
  box-shadow: -20px 0 40px rgba(0,0,0,.5)
  border-radius: 10px
  background-color: #fff
  background-image: linear-gradient(180deg,#fff,#fff,#d9dadb)
  margin-left: 50%
@media (max-width:768px)
  .authpanel
    .info
      display: none
    .form
      margin-left: 0
      width: 100%

.authpanel .nav-tabs
  box-shadow: inset 0 -2px 6px rgba(0,0,0,.05)
  border-radius: 10px 0 0 0
  .nav-link
    padding: .25rem 1rem 0
    border-radius: .75em .75em 0 0

.authpanel.signup
  .nav-link[data-action="signup"]
    background-color: #fff
    border-color: #dee2e6 #dee2e6 #fff
  *[data-show="signup"]
    display: auto
  *[data-show="login"]
    display: none
.authpanel.signup, .authpanel.login
  *[data-info]
    animation: ld-float-ttb-in 1s

.authpanel.signup, .authpanel.login
  &.failed
    *[data-info="failed"]
      display: block
    *[data-info="default"]
      display: none

.authpanel.login
  .nav-link[data-action="login"]
    background-color: #fff
    border-color: #dee2e6 #dee2e6 #fff
  *[data-show="login"]
    display: auto
  *[data-show="signup"]
    display: none

##### Websocket Configuration ( for Sharedb )
location ~ ^/dash/ws$ {
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header Host $host;
  proxy_pass http://grantdash-api;
  proxy_http_version 1.1;
  proxy_set_header Upgrade $http_upgrade;
  proxy_set_header Connection "upgrade";
  proxy_connect_timeout 30m;
  proxy_send_timeout 30m;
  proxy_read_timeout 30m;
}

##### Authentication API
location = /dash/api/global {
  rewrite ^/dash/(.*) /$1 break;
  proxy_pass http://grantdash-api;
  proxy_intercept_errors on;
  error_page 404 500 502 503 504 /empty/404;
}

location /dash/err/ {
  rewrite ^/dash/(.*) /$1 break;
  internal;
}

##### Special Router - put in front so wont be overwritten by general rule.
location ~ ^/dash/brd/(.+)/prj/create$ {
  try_files /prj/create.html =404;
}

location ~ ^/dash/(brd|org)/(.+)/admin$ {
  try_files /admin/index.html =404;
}

location ~ ^/dash/prj/(.+)/edit$ {
  try_files /prj/edit.html =404;
}

location ~ ^/dash/discus/(?<slug>[^/]+)$ {
  try_files /discus/thread.html =404;
}

location ~ ^/dash/org/(?<orgslug>.+)/prj/(?<prjslug>.+)/upload/(?<fn>[^/]+)$ {
  try_files /../users/org/$orgslug/prj/$prjslug/upload/release/$fn /../users/org/$orgslug/prj/$prjslug/upload/draft/$fn =404;
}

location ~ ^/dash/org/(?<orgslug>.+)/brd/(?<brdslug>.+)/upload/(?<fn>[^/]+)$ {
  try_files /../users/org/$orgslug/brd/$brdslug/upload/release/$fn /../users/org/$orgslug/brd/$brdslug/upload/draft/$fn /assets/img/$fn =404;
}

location ~ ^/dash/org/(?<orgslug>.+)/upload/(?<fn>[^/]+)$ {
  try_files /../users/org/$orgslug/upload/release/$fn /../users/org/$orgslug/upload/draft/$fn /assets/img/$fn =404;
}

location ~ ^/dash/s/avatar/(.*)$  {
  try_files /s/avatar/$1 /assets/img/avatar.svg =403;
}

# all static file requests go to local files
location ~ ^/dash/(s|js|css|assets)/(.*)$ {
  try_files /$1/$2 /$1/$2/index.html =404;
}

# put at the bottom
location ~ \.(?:ico|css|js|gif|jpe?g|png|svg|woff|ttf|otf)$ {
  expires 1d;
  add_header Pragma public;
  add_header Cache-Control public;
}

location ~ ^/dash/(.*) {
  try_files /$1 /$1/index.html @viewserver;
}
